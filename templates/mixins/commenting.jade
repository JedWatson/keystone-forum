mixin comment-form(action)
	form(method='post').comment-form.media
		input(type='hidden', name='action', value='comment.create')
		
		.comment-author.media-avatar.pull-left
			if current.user
				img(src=current.user.photo.exists ? current.user._.photo.fill(60,60) : '/images/scaffolding/60x60.png', alt=current.user.name.full, width=60, height=60).img-avatar
			else
				img(src='/images/scaffolding/60x60.png', alt='Comment author placeholder', width=60, height=60).img-avatar
		.comment-box.media-body
			.comment-field
				.form-group: textarea(name='content', tabindex=1, rows=5, placeholder=current.user ? 'Leave a reply...' : 'Please sign in to comment', disabled=!current.user).comment-field-input.form-control
			if current.user
				.form-inline.mv-5
					p.help-block.pull-right Replies use 
						a(href='http://daringfireball.net/projects/markdown/syntax', tabindex=3, target='_blank', title='Markdown Guide (new window)') Markdown
					button(type='submit', tabindex=2).btn.btn-sm.btn-primary Post Reply
					//- TODO
					//- This would be nice to have later
					//- .checkbox: label
						input(type='checkbox', name='subscribed', value='true', checked)
						| &nbsp;Subscribe to thread
			else
				a(href='/join?returnto=' + page.path).btn.btn-sm.btn-primary Log in or Join to Comment

mixin comment-post(comment)
	if comment.author
		div(id='comment-id-' + comment.id).comment-post
			if current.user && current.user.id == comment.author.id
				.comment-delete
					button(type='button').btn.btn-narrow.btn-link.comment-delete__confirm.text-confirm Delete
					.comment-delete__hidden
						//- | Remove your reply from this topic?
						a(href='?remove=comment&comment=' + comment.id).btn.btn-narrow.btn-danger Delete
						button(type='button').btn.btn-narrow.btn-default.comment-delete__cancel Cancel
						
			.media
				a(href=comment.author.url).pull-left.media-avatar
					img(src=comment.author.photo.exists ? comment.author._.photo.fill(60,60) : '/images/scaffolding/60x60.png', alt=comment.author.name.full, width=60, height=60).img-avatar
				.media-body
					p
						strong: a(href=comment.author.url)=comment.author.name.full
						if comment.createdAt
							|  &middot; 
							time(datetime=comment._.createdAt.format('YYYY-MM-DDTHH:mm:ssZ'), title=comment.createdAt).js-timeago.text-muted= comment._.createdAt.format('D MMM YYYY')
					p!=comment.content.html

mixin comment-thread(comments)
	if comments.length
		.comment-thread
			for comment in comments
				+comment-post(comment)
