mixin social-signin()
	//- p.session-form-heading Use a social account
	.social-signup-buttons
			
		.signup-button: a(href='/authentication/github', title='Log in with Github').btn.btn-github.btn-block
			span.entypo-social.entypo-github
			span.signup-button__text  Github
			
		.signup-button: a(href='/authentication/twitter', title='Log in with Twitter').btn.btn-twitter.btn-block
			span.entypo-social.entypo-twitter
			span.signup-button__text  Twitter
		
		.signup-button: a(href='/authentication/facebook', title='Log in with Facebook').btn.btn-facebook.btn-block
			span.entypo-social.entypo-s-facebook
			span.signup-button__text  Facebook